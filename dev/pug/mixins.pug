mixin link(href,text,classlink)
	a(href= href,class= classlink)= text

mixin nav(link,title,icon,twopage,addlink)
	if(title === activePage)
		li.c-main-menu__item.c-main-menu__item--active
			a(href= '/',class= 'c-main-menu__link')
				span(class='zv-icon-menu-' +icon)
				span= title
			if(twopage === 'true')
				if(page === addlink)
					a(href="/", class="c-main-menu__add-new") Добавить
				else
					a(href="/" +addlink, class="c-main-menu__add-new") Добавить
	else
		li.c-main-menu__item
			a(href= link,class=  'c-main-menu__link')
				span(class='zv-icon-menu-' +icon)
				span= title
			if(twopage === 'true')
				if(page === addlink)
					a(href="/", class="c-main-menu__add-new") Добавить
				else
					a(href= addlink, class="c-main-menu__add-new") Добавить