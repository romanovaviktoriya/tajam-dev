mixin icon(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + ' ' + mod)
		use(xlink:href="static/img/svg/symbol/sprite.svg#" + name)

mixin picture(folder,nameimgmobile,format, nameimgdesc, alt,classimg,desktopwidth,tabletwidth,mobilewidth)
	- alt = alt || ''
	- classimg = classimg || ''
	- folder = folder || ''
	- nameimgdesc = nameimgdesc || nameimgmobile
	picture
		source(type="image/webp" media="(min-width: " + desktopwidth + "px)" srcset="static/img/" + folder + nameimgdesc + ".webp 1x, static/img/" + folder + nameimgdesc + "@2x.webp 2x")
		source(type="image/webp" srcset="static/img/" + folder + nameimgmobile + ".webp 1x, static/img/" + folder + nameimgmobile + "@2x.webp 2x")
		source(media="(min-width: " + desktopwidth + "px)" srcset="static/img/" + folder + nameimgdesc + "." + format + " 1x, static/img/" + folder + nameimgdesc + "@2x." + format + " 2x")
		img(class=""+ classimg src="static/img/" + folder + nameimgmobile + "." + format srcset="static/img/" + folder + nameimgmobile + "@2x." + format + " 2x" alt=""+ alt)

